{
  "name": "zeit-toast-clone",
  "version": "0.0.0-semantically-released",
  "private": false,
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/rqbazan/zeit-toast-clone.git"
  },
  "license": "MIT",
  "keywords": [
    "toast",
    "animated",
    "zeit",
    "react"
  ],
  "files": [
    "lib"
  ],
  "author": {
    "name": "Ricardo Alexis Quiroz Bazan",
    "email": "raquirozbazan@gmail.com",
    "url": "http://github.com/rqbazan"
  },
  "scripts": {
    "build:js": "rollup -c",
    "build:dts": "node ./dts-generator.js",
    "prepublishOnly": "yarn build:js && yarn build:dts",
    "build": "build-storybook -o public",
    "develop": "start-storybook -p 6006",
    "lint": "eslint --ext ts,js,tsx ."
  },
  "eslintIgnore": [
    "lib"
  ],
  "eslintConfig": {
    "extends": "rqbazan-ts/react",
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "react/destructuring-assignment": "off",
      "no-plusplus": "off",
      "react/state-in-constructor": "off",
      "import/prefer-default-export": "off",
      "react/jsx-props-no-spreading": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.stories.js",
            "*.config.js",
            "dts-generator.js"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".tsx"
          ]
        }
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "^#storybook"
          ]
        }
      ]
    }
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-spring": "^8.0.0",
    "styled-components": "^4.3.2 || ^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@storybook/addon-knobs": "^5.2.0-rc.8",
    "@storybook/addon-storysource": "^5.2.0-rc.8",
    "@storybook/addon-viewport": "^5.1.11",
    "@storybook/react": "^5.2.0-rc.8",
    "@storybook/theming": "^5.2.0-rc.8",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@types/styled-components": "^4.1.18",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "dts-generator": "^3.0.0",
    "eslint": "^6.3.0",
    "eslint-config-rqbazan-ts": "^0.1.4",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-spring": "^8.0.27",
    "rollup": "^1.20.3",
    "rollup-plugin-typescript": "^1.0.1",
    "storybook-dark-mode": "0.1.7",
    "styled-components": "^5.0.0-beta.8",
    "tslib": "^1.10.0",
    "typescript": "3.5.3"
  }
}
