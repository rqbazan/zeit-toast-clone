{
  "name": "zeit-toast-clone-monorepo",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:lib": "lerna run build --scope=zeit-toast-clone",
    "check-types": "lerna exec --parallel -- tsc --noEmit",
    "dev": "lerna run dev --parallel",
    "lint": "eslint --ignore-path .gitignore . --ext ts,tsx,js",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{ts,tsx,js,json,md}\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format check-types lint",
    "ci:publish": "lerna publish --yes --registry https://registry.npmjs.org/:_authToken=${NPM_TOKEN} --no-verify-access"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.{ts,tsx,js}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-rqbazan-ts": "^0.3.1",
    "husky": "^3.1.0",
    "lerna": "^3.13.4",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-spring": "^8.0.27",
    "typescript": "3.7.4"
  }
}
